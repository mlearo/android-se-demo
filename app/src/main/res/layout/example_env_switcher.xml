<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relLayout"
    tools:context=".EnvSwitcher"
    android:background="@drawable/ic_logo"
    android:gravity="center_vertical">


    <TextView
        android:id="@+id/textView"
        android:layout_width="101dp"
        android:layout_height="36dp"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:layout_alignTop="@+id/account"
        android:gravity="center"
        android:text="Account"
        android:textAlignment="gravity"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="37dp" />

    <EditText
        android:id="@+id/traceId"
        android:layout_width="147dp"
        android:layout_height="36dp"
        android:hint="hint"
        android:text=""
        android:textSize="14sp"
        tools:layout_editor_absoluteY="81dp"
        tools:layout_editor_absoluteX="16dp"
        android:layout_below="@+id/environment"
        android:layout_alignLeft="@+id/environment"
        android:layout_alignStart="@+id/environment" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="101dp"
        android:layout_height="37dp"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2"
        android:layout_below="@+id/textView3"
        android:gravity="center"
        android:text="Env"
        android:textAlignment="gravity"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="204dp"
        tools:layout_editor_absoluteY="16dp" />

    <EditText
        android:id="@+id/environment"
        android:layout_width="147dp"
        android:layout_height="36dp"
        android:hint="hint"
        android:text="prod"
        android:textSize="14sp"
        tools:layout_editor_absoluteY="385dp"
        tools:layout_editor_absoluteX="16dp"
        android:layout_below="@+id/profile"
        android:layout_alignLeft="@+id/profile"
        android:layout_alignStart="@+id/profile" />

    <EditText
        android:id="@+id/profile"
        android:layout_width="147dp"
        android:layout_height="36dp"
        android:hint="hint"
        android:text="profile"
        android:textSize="14sp"
        tools:layout_editor_absoluteY="210dp"
        tools:layout_editor_absoluteX="221dp"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="48dp"
        android:layout_marginEnd="48dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/profile"
        android:layout_alignRight="@+id/profile"
        android:gravity="center"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="127dp" />

    <EditText
        android:id="@+id/account"
        android:layout_width="147dp"
        android:layout_height="36dp"
        android:hint="hint"
        android:text="account"
        android:textSize="14sp"
        tools:layout_editor_absoluteY="74dp"
        tools:layout_editor_absoluteX="147dp"
        android:layout_below="@+id/textView2"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="101dp"
        android:layout_height="37dp"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:layout_below="@+id/account"
        android:gravity="center"
        android:text="Profile"
        android:textAlignment="gravity"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="90dp"
        tools:layout_editor_absoluteY="210dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="101dp"
        android:layout_height="36dp"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:layout_below="@+id/textView5"
        android:gravity="center"
        android:text="Trace ID"
        android:textAlignment="gravity"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="37dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="204dp"
        android:layout_height="50dp"
        android:text="Submit"
        android:background="@drawable/button"
        tools:layout_editor_absoluteY="276dp"
        tools:layout_editor_absoluteX="90dp"
        android:layout_below="@+id/traceId"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp"
        android:onClick="submitAccPro"/>


</RelativeLayout>
